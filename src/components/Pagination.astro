---
import { Icon } from 'astro-icon'

const { firstPage, previousPage, nextPage, lastPage, currentPage, totalPages } =
  Astro.props
---

<nav class="pagination">
  <ul class="list">
    <li>
      <a href={firstPage} class={firstPage ? '' : 'is-disabled'}>
        <Icon
          name="mdi:chevron-double-left"
          role="img"
          aria-label="最初のページ"
          width="32px"
          height="32px"
        />
      </a>
    </li>
    <li>
      <a href={previousPage} class={previousPage ? '' : 'is-disabled'}>
        <Icon
          name="mdi:chevron-left"
          role="img"
          aria-label="前のページ"
          width="32px"
          height="32px"
        />
      </a>
    </li>
    <li><span>{currentPage} / {totalPages}</span></li>
    <li>
      <a href={nextPage} class={nextPage ? '' : 'is-disabled'}>
        <Icon
          name="mdi:chevron-right"
          role="img"
          aria-label="次のページ"
          width="32px"
          height="32px"
        />
      </a>
    </li>
    <li>
      <a href={lastPage} class={lastPage ? '' : 'is-disabled'}>
        <Icon
          name="mdi:chevron-double-right"
          role="img"
          aria-label="最後のページ"
          width="32px"
          height="32px"
        />
      </a>
    </li>
  </ul>
</nav>

<style lang="scss">
  .pagination {
    margin: 4rem 0 0;
  }

  .list {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;

    a {
      display: block;
      color: #000;
      border: 1px solid #000;
      border-radius: 0.5rem;

      &.is-disabled {
        color: #ddd;
        pointer-events: none;
        border-color: #ddd;
      }
    }

    span {
      display: inline-block;
      margin: 0 1rem;
      font-size: 1.25rem;
    }
  }
</style>
